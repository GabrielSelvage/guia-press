<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/homenavbar.ejs') %>

<body>
    <div class="container">
        <hr>

        <% result.articles.rows.forEach(article => { %>
            <br>
            <div class="card">
                <div class="card-header">
                    <h4><%= article.title %></h4>
                </div> <!--card-header-->
                <div class="card-body">
                    <a href="/<%= article.slug %>" class="btn btn-success">Ler artigo</a>
                </div><!--card-body-->

            </div> <!--card-->
        <% }) %>

        <div class="row">
                <div class="col col-12">
                <hr>
                <% if (result.page > 1) { %>
                <a href="/articles/page/<%= result.page - 1 %>" style="float: left"> <<< Prev </a>
                <% } else { %>
                <a href="/" style="float: left"> <<< Prev </a>
                <% } %>
                <% if(result.next) { %>
                <a href="/articles/page/<%= result.page + 1 %>" style="float: right">Next >>></a>
                <% } %>
                </div> <!--col-->
            </div> <!--row-->

    </div>
</body>

<%- include ('../../partials/footer.ejs') %>
